<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:minWidth="280dp"
    android:orientation="vertical"
    android:weightSum="1">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/frameLayout"
        android:layout_marginTop="-2dp"
        android:background="@color/dialogColor"
        android:padding="0dp" >

        <TextView
            android:id="@+id/messageDialog"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/frameLayout"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="Ваш обратный отсчёт готов.\nВы принимаете свою судьбу?"
            android:textColor="@color/textColor"
            android:textSize="24dp"
            android:textStyle="bold" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/dialogColor"
        android:layout_weight="0.01">

        <Button
            android:id="@+id/dialogButtonNo"
            android:layout_width="1.1in"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="Нет"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#F89494"
            android:background="#ffffff"/>

        <Button
            android:id="@+id/dialogButtonYes"
            android:layout_width="1.1in"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/dialogButtonNo"
            android:layout_marginRight="10dp"
            android:text="Да"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#B8F5BE"
            android:background="#ffffff"/>

    </RelativeLayout>

</LinearLayout>